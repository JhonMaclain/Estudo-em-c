int main()
{
    int i, qdp = 0, qdi = 0, num;
    
    for (i=1;i<=12;i++)
    {
        printf("Digite o %d .o numero: ",i);
        scanf("%d",& num);
        if(num% 2==0)
        {
            qdp++;
        }
        else{
            qdi++;
        }
    }
    
    printf("A quantidade de numeros pares sao: %d\n", qdp);
    printf("A quantidade de numeros impares sao: %d", qdi);
    
    return 0;
}
